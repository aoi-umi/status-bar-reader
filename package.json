{
	"name": "status-bar-reader",
	"displayName": "status-bar-reader",
	"description": "read book on status bar",
	"main": "./out/extension.js",
	"publisher": "umi-aoi",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"commands": [],
		"keybindings": [
			{
				"command": "statusBarReader.next",
				"key": "ctrl+right"
			},
			{
				"command": "statusBarReader.prev",
				"key": "ctrl+left"
			},
			{
				"command": "statusBarReader.nextLine",
				"key": "ctrl+down"
			},
			{
				"command": "statusBarReader.prevLine",
				"key": "ctrl+up"
			},
			{
				"command": "statusBarReader.toggle",
				"key": "ctrl+alt+,"
			},
			{
				"command": "statusBarReader.line",
				"key": "ctrl+alt+l"
			}
		],
		"configuration": {
			"type": "object",
			"title": "status-bar-reader",
			"properties": {
				"statusBarReader.textLength": {
					"type": "number",
					"default": 20,
					"description": "每次显示字数"
				}
			}
		}
	},
	"extensionPack": [],
	"devDependencies": {
		"@types/node": "^13.1.2",
		"@types/vscode": "^1.41.0"
	}
}